#include <stdio.h>

int main ()
{
    int a,b,c;
    int somaSucessiva(int a , int b);
    printf("selecione o multiplicador");
    scanf("%d", &a);
    printf("selecione o numero a ser multiplicado");
    scanf("%d", &b);
    c = somaSucessiva( a , b);
    printf("%d",c);
}
int somaSucessiva(int a , int b)
{
    static int soma;
    soma += b;
    if (a == 1)
        return soma;
    else
        return ( somaSucessiva(a-1, b));
}
